# Production Environment Variables for Render
# Copy these to Render's Environment Variables section

# Database (This will be automatically set by Render)
# DATABASE_URL=postgresql://...

# Security (Generate a strong secret key)
SECRET_KEY=your-production-secret-key-here-make-it-strong-and-unique
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Weather API (Add your OpenWeatherMap API key)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Application
DEBUG=False
ALLOW_ORIGINS=["https://your-render-app.onrender.com"]

# Email (Optional)
SMTP_EMAIL=noreply@eventplanner.com
SMTP_PASSWORD=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
